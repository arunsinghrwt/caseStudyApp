<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_alignParentTop="true"
    android:orientation="horizontal"
    android:id="@+id/itemView"
    >



  <ImageView
      android:id="@+id/ivDeal"
      android:layout_marginHorizontal="5dp"
      tools:src="@drawable/ic_launcher_background"
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toTopOf="parent"
    />





  <TextView
      android:id="@+id/tvDealPrice"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      tools:text="$233"
      android:layout_marginStart="8dp"
      android:textColor="@color/red_color"
      android:fontFamily="@font/roboto_bold"
      app:layout_constraintStart_toEndOf="@+id/ivDeal"
      app:layout_constraintTop_toTopOf="parent"
      android:textSize="21sp" />
  <TextView
      android:id="@+id/tvDealRegPrice"
      tools:text="reg. $233.99"
      android:paddingBottom="3dp"

      android:fontFamily="@font/roboto_medium"
      android:layout_width="0dp"
      android:textColor="@color/gray_color"
      android:layout_marginStart="5dp"
      android:layout_height="match_parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="@+id/tvDealPrice"
      app:layout_constraintStart_toEndOf="@+id/tvDealPrice"
      android:textSize="12sp" />

  <TextView
      android:id="@+id/tvFulfillment"
      tools:text="Online"
      android:textColor="@color/gray_color"
      android:fontFamily="@font/roboto_medium"
      android:layout_width="0dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="3dp"
      android:layout_height="match_parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvDealPrice"
      app:layout_constraintStart_toEndOf="@id/ivDeal"
      android:textSize="12sp" />

  <TextView
      android:id="@+id/tvProductTittle"
      tools:text="Women's Long Sleeve Denim Jacket - Universal Threadâ„¢"
      android:textColor="@color/black_color"
      android:fontFamily="@font/roboto_medium"
      android:layout_marginTop="10dp"
      android:layout_width="0dp"
      android:layout_marginEnd="5dp"
      android:layout_marginStart="8dp"
      android:layout_height="match_parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvFulfillment"
      app:layout_constraintStart_toEndOf="@id/ivDeal"
      android:textSize="14sp" />

  <TextView
      android:id="@+id/tvAvailability"
      tools:text="In stock"
      android:textColor="@color/colorAccent"
      android:fontFamily="@font/roboto_medium"
      android:layout_marginTop="12dp"
      android:layout_marginStart="8dp"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      app:layout_constraintTop_toBottomOf="@+id/tvProductTittle"
      app:layout_constraintStart_toEndOf="@id/ivDeal"

      android:textSize="12sp" />

  <TextView
      android:id="@+id/tvAisle"
      tools:text="in aisle W20"
      android:textColor="@color/gray_color"
      android:fontFamily="@font/roboto_medium"
      android:layout_marginTop="12dp"
      android:layout_marginStart="5dp"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvProductTittle"
      app:layout_constraintStart_toEndOf="@id/tvAvailability"
      android:textSize="12sp" />

  <View
      android:id="@+id/lineView"
      android:layout_marginTop="16dp"
      android:background="#D6D6D6"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvAvailability"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_width="match_parent"
      android:layout_height="1dp">

  </View>


</androidx.constraintlayout.widget.ConstraintLayout>
